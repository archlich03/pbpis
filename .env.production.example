APP_NAME=POBIS
APP_ENV=production
APP_KEY=  # GENERATE WITH: php artisan key:generate --show
APP_DEBUG=false
APP_URL=https://pobis.teso.fyi

DEFAULT_EMAIL=admin@knf.vu.lt
DEFAULT_PASSWORD=  # CHANGE THIS TO A SECURE PASSWORD

# Data retention period in days (for soft-deleted users and old meetings)
DATA_RETENTION_DAYS=455

# Audit log retention period in days
AUDIT_LOG_RETENTION_DAYS=90

# Gemini AI API Key for meeting summary generation
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Maximum Gemini API requests allowed per day (to prevent quota exhaustion)
GEMINI_MAX_REQUESTS_PER_DAY=10

# Microsoft OAuth configuration
MSGRAPH_CLIENT_ID=your-client-id
MSGRAPH_SECRET_ID=your-client-secret
MSGRAPH_TENANT_ID=common
MSGRAPH_OAUTH_URL=https://pobis.teso.fyi/login/microsoft/callback
MSGRAPH_LANDING_URL=https://pobis.teso.fyi/user/dashboard

APP_LOCALE=lt
APP_FALLBACK_LOCALE=lt
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=pobis_prod
DB_USERNAME=pobis_user
DB_PASSWORD=  # GENERATE STRONG PASSWORD
DB_ROOT_PASSWORD=  # GENERATE STRONG PASSWORD

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=redis

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=  # GENERATE STRONG PASSWORD
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@pobis.teso.fyi"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
