APP_NAME=POBIS
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

DEFAULT_EMAIL=admin@knf.vu.lt
DEFAULT_PASSWORD=admin123

# Data retention period in days (for soft-deleted users and old meetings)
DATA_RETENTION_DAYS=455

# Audit log retention period in days
AUDIT_LOG_RETENTION_DAYS=90

MSGRAPH_CLIENT_ID=your-client-id
MSGRAPH_SECRET_ID=your-client-secret
# For university accounts, use this tenant ID:
MSGRAPH_TENANT_ID=common
# For multi-tenant or personal accounts, use 'common'

# Microsoft OAuth configuration - must be FULL absolute URLs
MSGRAPH_OAUTH_URL=http://localhost/login/microsoft/callback
MSGRAPH_LANDING_URL=http://localhost/user/dashboard

APP_LOCALE=lt
APP_FALLBACK_LOCALE=lt
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=pobis
DB_USERNAME=user
DB_PASSWORD=secret
DB_ROOT_PASSWORD=secretroot

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=redis
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
